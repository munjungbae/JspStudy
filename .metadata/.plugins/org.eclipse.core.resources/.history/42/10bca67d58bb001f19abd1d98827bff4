<%@ page contentType="text/html; charset=euc-kr"%>
<%@ page import="java.net.URLEncoder"%>
<%
Cookie ck = new Cookie("name", URLEncoder.encode("문정배", "UTF-*"));
response.addCookie(ck);
%>
<html>
<head>
<title>쿠키생성</title>
</head>
<body>
	<%=cookie.getName()%>
	쿠키의 값 = "<%=cookie.getValue()%>"
</body>
</html>